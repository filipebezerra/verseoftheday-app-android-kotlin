<resources>

    <!-- Base application theme. -->
    <style name="Theme.VerseOfTheDay" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- region Primary brand color -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>
        <!-- endregion -->

        <!-- region Secondary brand color -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant</item>
        <item name="colorOnSecondary">@color/color_on_secondary</item>
        <!-- endregion -->

        <!-- region Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- endregion -->

        <!-- region App theme customization -->
        <item name="android:colorBackground">@color/color_background</item>
        <item name="colorOnSurface">@color/color_on_surface</item>
        <item name="toolbarStyle">@style/Widget.VerseOfTheDay.Toolbar</item>
        <item name="bottomNavigationStyle">@style/Widget.VerseOfTheDay.BottomNavigationView</item>
        <!-- endregion -->
    </style>

</resources>
